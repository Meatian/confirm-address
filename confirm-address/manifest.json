{
  "manifest_version": 2,
  "name": "Confirm-Address",
  "description": "Confirm E-mail addresses before sending mail",
  "version": "1.3.3",
  "author": "Meatian",
  "homepage_url": "https://github.com/Meatian/confirm-address/",
  "legacy": {
    "type" : "xul",
    "options": {
      "page": "chrome://confirm-address/content/setting.xul",
